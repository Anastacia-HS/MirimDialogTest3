<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">


    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_Berry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="딸기"
            android:layout_marginBottom="10dp"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_Beer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맥주"
            android:layout_marginBottom="10dp"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_Blueberry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="블루베리"
            android:layout_marginBottom="10dp"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_Leaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="풀잎"
            android:layout_marginBottom="10dp"
            android:textSize="20sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진보기"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/img_Berry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/berry" />

    <ImageView
        android:id="@+id/img_Beer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/beer" />

    <ImageView
        android:id="@+id/img_Blueberry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/blueberry" />

    <ImageView
        android:id="@+id/img_Leaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/leaf" />

</LinearLayout>